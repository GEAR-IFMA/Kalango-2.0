int sem;

task move_square()
{
  while (true)
  {
    until (sem == 0); sem = 1;
    OnFwd(OUT_AC, 55);
    sem = 0;
    Wait(500);
    until (sem == 0); sem = 1;
    OnRev(OUT_AC, 55);
    sem = 0;
    Wait(500);
  }
}

task submain()
{
  SetSensor(IN_1, SENSOR_TOUCH);
  while (true)
  {
    if (SENSOR_1 == 1)
    {
      until (sem == 0); sem = 1;
      RotateMotor(OUT_B, 20, 12);
      sem = 0;
    }
  }
}

task main()
{
  sem = 0;
  Precedes(move_square, submain);
}
